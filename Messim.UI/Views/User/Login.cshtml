@model Messim.UI.Models.User
@{
    ViewBag.Title = "Zaloguj się";
}

@if (@Html.ValidationSummary() != null)
{ 
    <div class="alert alert-error">
        @Html.ValidationSummary()
    </div>
}
<div class="hero-unit span4 offset3">
    <h2>
    Login
</h2>
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "well" }))
    {
        <label>
            Nazwa użytkownika
        </label>
        @Html.TextBox("username", null, new { @class = "span3", placeholder = "Wprowadź swoją nazwę użytkownika" })
        <label>
            Hasło
        </label>
        @Html.Password("password", null, new { @class = "span3", placeholder = "Wprowadź swoje hasło" })    
            
        <label class="checkbox">
            @Html.CheckBox("rememberUser", isChecked: false)
            Zapamiętaj mnie
        </label>
        
        <div style="clear: both; content: ''"></div>
        
        <button type="submit" class="btn btn-primary">
            <i class="icon-ok-sign icon-white"></i>Zaloguj się
        </button>
    
    }
</div>
